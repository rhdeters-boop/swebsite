{
  "name": "swebsite",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "concurrently --names \"BACKEND,FRONTEND\" --prefix-colors \"magenta,cyan\" \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:frontend": "vite > logs/frontend.log 2>&1",
    "dev:backend": "cd backend && npm run dev > ../logs/backend.log 2>&1",
    "dev:console": "concurrently --names \"BACKEND,FRONTEND\" --prefix-colors \"magenta,cyan\" \"npm run dev:backend:console\" \"npm run dev:frontend:console\"",
    "dev:frontend:console": "vite",
    "dev:backend:console": "cd backend && npm run dev",
    "dev:services": "docker-compose -f docker-compose.dev.yml up -d",
    "dev:full": "npm run dev:services && sleep 5 && npm run dev",
    "stop:services": "docker-compose -f docker-compose.dev.yml down",
    "logs:frontend": "tail -f logs/frontend.log",
    "logs:backend": "tail -f logs/backend.log",
    "logs:all": "concurrently --names \"BACKEND-LOG,FRONTEND-LOG\" --prefix-colors \"magenta,cyan\" \"npm run logs:backend\" \"npm run logs:frontend\"",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "test:backend": "npm --prefix ./backend run test",
    "test:backend:containers": "npm --prefix ./backend run test:containers",
    "test:backend:coverage": "npm --prefix ./backend run test:coverage"
  },
  "dependencies": {
    "@stripe/react-stripe-js": "^3.8.0",
    "@stripe/stripe-js": "^7.6.1",
    "@tanstack/react-query": "^5.83.0",
    "@tanstack/react-query-devtools": "^5.83.0",
    "axios": "^1.10.0",
    "lucide-react": "^0.525.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-easy-crop": "^5.5.0",
    "react-router-dom": "^7.7.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.31.0",
    "@tailwindcss/forms": "^0.5.10",
    "@types/node": "^24.1.0",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.7.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.0",
    "eslint": "^9.31.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.38.0",
    "vite": "^7.0.5"
  }
}
