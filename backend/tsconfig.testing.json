{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "target": "ES2021",
  "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "allowJs": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "..",
    "paths": {
  "@/*": ["*"],
  "@/backend/app": ["backend/app.ts"],
  "@/backend/services/user.service": ["backend/services/user.service.ts"],
  "@/backend/tests/helpers/sequelize-inmemory": ["backend/tests/helpers/sequelize-inmemory.ts"],
  "@/backend/tests/helpers/httpMock": ["backend/tests/helpers/httpMock.ts"],
  "@/backend/utils/slug": ["backend/utils/slug.ts"]
    },
    "types": ["node", "jest"],
    "isolatedModules": true
  },
  "include": [
  "./**/*.ts",
  "./**/*.d.ts",
  "./**/*.js"
  ],
  "exclude": [
    "**/dist/**",
    "**/coverage/**",
    "**/node_modules/**"
  ]
}