{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "target": "ES2021",
    "module": "CommonJS",
    "esModuleInterop": true,
    "allowJs": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "..",
    "paths": {
      "@/*": ["*"]
    },
    "types": ["node", "jest"]
  },
  "include": [
    "./**/*.ts",
    "../**/*.ts",
    "../**/*.d.ts",
    "./**/*.js"
  ],
  "exclude": [
    "**/dist/**",
    "**/coverage/**",
    "**/node_modules/**"
  ]
}